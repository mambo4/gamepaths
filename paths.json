{
    //roots
   "game" : "C:/projectname/game",
   "source" : "C:/project/source/base",
   "animtools": "C:/animation-pipeline",

//departments

   "animation_source" : "animation"
   "art_source" : "art"
   "rigging" : "//id-vault/Animation/RIGGING/project/source/animation")
   "animation_asset_subfolders" : [
       'base/assets/mesh',
       'base/assets/rig',
   ]
   "animation_motion_subfolders" : [
       'base/motion/ambient',
       'base/motion/combat',
       'base/motion/death',
       'base/motion/pain',
       'base/motion/traversal',
   ]

   "rigging_subfolders" : ['_master', 'wip']
