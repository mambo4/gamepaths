//cineractive  decls
   "cineractive_animweb" : animweb + "/cineractive")
   "cineractive_entitydef" : entitydef + "/cineractive")

//cinematic  decls
   "cinematic_animweb" : animweb + "/interact")
   "cinematic_entitydef" : entitydef + "/interact")

//syncmelee  decls
   "syncmelee_animweb" : animweb + "/syncmelee")
   "syncmelee_entitydef" : entitydef + "/syncmelee")
